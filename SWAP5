#include <stdio.h>
void swap_no1(int*,int*);
void swap_no2(int*,int*);
int main()
{
  int x,y;
  int a,b;
  printf("enter the values to be swapped in first function");
  scanf("%d",&x);
  scanf("%d",&y);
  printf("enter the values to be swapped in second function");

  scanf("%d",&a);
  scanf("%d",&b);
  swap_no1(&x,&y);
  swap_no2(&a,&b);
  printf("values after swapping:\n%d\n%d",x,y);
   printf("values after swapping:\n%d\n%d",a,b);
  return 0;
}

void swap_no1(int* x,int* y)
{
    int temp;
  temp=(*x);
  (*x)=(*y);
  (*y)=temp;


}
void swap_no2(int* x,int* y)
{
  (*x) = (*x) + (*y);
  (*y) = (*x) - (*y);
  (*x) = (*x) - (*y);

}
